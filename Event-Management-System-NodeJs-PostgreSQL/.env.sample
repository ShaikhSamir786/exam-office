##############################################################
#                      SERVER CONFIGURATION                  #
##############################################################

# Application port
# Common production ports: 80 (HTTP), 443 (HTTPS), or 4000 for custom apps
PORT=4000

# Node environment
# Options: development | staging | production
NODE_ENV=development


##############################################################
#                      DATABASE CONFIGURATION                #
##############################################################

# PostgreSQL Database Configuration
# Format: postgres://user:password@host:port/database
DB_NAME=<YOUR_DATABASE_NAME>
DB_USER=<YOUR_DATABASE_USER>
DB_PASSWORD=<YOUR_DATABASE_PASSWORD>
DB_HOST=<YOUR_DATABASE_HOST>
DB_PORT=5432


##############################################################
#                      AUTHENTICATION                        #
##############################################################

# JWT secret key for signing tokens
# ⚠️  In production, use a long, randomly generated secure string
JWT_SECRET=<YOUR_JWT_SECRET_KEY>

# JWT token expiration duration
# Common values: 12h, 7d, 1h, 30m, etc.
JWT_EXPIRES_IN=12h


##############################################################
#                      EMAIL SERVICE CONFIGURATION           #
##############################################################

# SMTP host server
# Example shows Gmail; adjust for your email provider
SMTP_HOST=<YOUR_SMTP_HOST>

# SMTP port
# Common ports: 587 (TLS), 465 (SSL), 25 (non-secure)
SMTP_PORT=587

# SMTP authentication email
# Email address used to send system emails
SMTP_USER=<YOUR_SMTP_EMAIL>

# SMTP password or app-specific password
# ⚠️  For Gmail, use an App Password instead of your main password
SMTP_PASS=<YOUR_SMTP_PASSWORD>
