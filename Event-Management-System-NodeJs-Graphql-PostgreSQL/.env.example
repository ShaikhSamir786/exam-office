##############################################################
#                      APP CONFIGURATION                     #
##############################################################

# Application Port
PORT=4000

# Environment (development | staging | production)
NODE_ENV=development


##############################################################
#                      JWT CONFIGURATION                     #
##############################################################

# Secret key for signing JWT tokens (use a strong, random value)
JWT_SECRET=your_jwt_secret_here

# Token expiration time (e.g., 12h, 7d, 1h)
JWT_EXPIRES_IN=12h


##############################################################
#                      EMAIL CONFIGURATION                   #
##############################################################

# SMTP mail host (Gmail example)
SMTP_HOST=smtp.gmail.com

# SMTP port (587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP authentication email
SMTP_USER=your_email@example.com

# SMTP app-specific password or mail service API key
SMTP_PASS=your_smtp_password_here


##############################################################
#                      DATABASE CONFIGURATION                #
##############################################################

# Database name
DB_NAME=your_database_name

# Database username
DB_USER=your_database_user

# Database password
DB_PASSWORD=your_database_password

# Database host (localhost for local setup)
DB_HOST=localhost

# Database port (default for PostgreSQL)
DB_PORT=5432
